{
  "version": "2025-09-11",
  "currency_base": "EUR",
  "purpose": "Quoting model for Thomas's AI + Automation + Web services",
  "notes": [
    "All prices exclude VAT and third-party tool costs (e.g., SaaS subscriptions, API credits).",
    "Currency conversions (USD/GBP/etc.) are calculated at invoice date.",
    "Travel and accommodation, if required, are billed at cost.",
    "This document avoids vendor-specific suites and is platform-agnostic."
  ],
  "pricing_model": {
    "formula": "TOTAL = (sum(base_price_eur for selected services) × client_type.multiplier × geography.multiplier × engagement.multiplier × surcharge.multiplier × bundle.multiplier) + recurring_components",
    "minimum_invoice_eur": 400,
    "payment_terms": {
      "deposits": "50% upfront for projects ≥ €2,000; remainder Net 15 upon delivery",
      "retainers": "Monthly in advance",
      "late_payment": "2% monthly interest after 15 days past due",
      "cancellation": "≥5 business days notice or 25% of remaining PO value"
    }
  },
